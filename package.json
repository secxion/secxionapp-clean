{
  "name": "secxion",
  "version": "1.0.0",
  "private": true,
  "description": "Secxion - Digital Wallet & Marketplace Platform (Monorepo)",
  "scripts": {
    "compress:images": "node scripts/compress-images.mjs",
    "deploy": "./deploy.sh",
    "dev": "concurrently \"npm --prefix backend run dev\" \"npm --prefix frontend start\"",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend start",
    "start": "npm --prefix backend start",
    "build:all": "npm --prefix frontend run build && npm --prefix backend run build",
    "build:frontend": "npm --prefix frontend run build",
    "build:backend": "npm --prefix backend run build",
    "start:prod": "npm --prefix backend run start:prod",
    "install:all": "npm install && npm --prefix backend install && npm --prefix frontend install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "glob": "^11.0.3",
    "react-image-file-resizer": "^0.4.8",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
